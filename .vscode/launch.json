{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug NLWeb App (app-file.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/code/app-file.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/code",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/code"
            },
            "justMyCode": false,
            "stopOnEntry": false,
            "redirectOutput": true
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe"
        },
        {
            "name": "Debug NLWeb App (Production Mode)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/code/app-file.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/code",
            "python": "${workspaceFolder}/.venv/Scripts/python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/code"
            },
            "justMyCode": true,
            "stopOnEntry": false,
            "redirectOutput": true
        }
    ]
}
